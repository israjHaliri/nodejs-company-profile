<%- include ../../header_backend.ejs %>
<div class="panel panel-default">
	<div class="panel-heading"><b><i class="fa fa-user"></i>&nbsp;User</b></div>
	<div class="panel-body">
		<form method="POST" action="/backend/user/update/<%= data[0].id %>">
			<div class="form-group">
				<label for="exampleInputPassword1">Name</label>
				<input type="text" name="name" class="form-control" placeholder="admin" value="<%=data[0].name%>" required>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Email</label>
				<input type="email" name="email" class="form-control" placeholder="admini@mail.com" value="<%= data[0].email %>" required>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				<input type="password" name="password" class="form-control" placeholder="*********"  required>
			</div>
			<div class="form-group" align="center">
				<button class="btn btn-success" type="submit">submit</button>
			</div>	
		</form>
	</div>
</div>
