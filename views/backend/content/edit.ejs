<%- include ../../header_backend.ejs %>
<div class="panel panel-default">
	<div class="panel-heading"><b><i class="fa fa-file"></i>&nbsp;Content</b></div>
	<div class="panel-body">
		<form method="POST" action="/backend/content/update/<%= data[0].id %>" enctype="multipart/form-data">
			<div class="form-group">
				<label for="exampleInputPassword1">Category</label>
				<select class="form-control" name="category">
					<option value="1" <% if(data[0].category == "1") {process.stdout.write("selected");} %>>about us</option>
					<option value="2" <% if(data[0].category == "2") {process.stdout.write("selected");} %>>service</option>
				</select>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Title</label>
				<input type="text" name="title" class="form-control" placeholder="title 1" value="<%=data[0].title%>" required>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Description</label>
				<textarea class="form-control" placeholder="this for explain the title" rows="4" name="description" cols="50" required><%=data[0].description%></textarea>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Photo</label>
				<input type="file" name="image" class="form-control" required>
			</div>
			<div class="form-group" align="center">
				<button class="btn btn-success" type="submit">submit</button>
			</div>	
		</form>
	</div>
</div>
<%- include ../../footer_backend.ejs %>
